<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >






    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:background="@color/black"

        android:text="03-Jan-2021"
        app:layout_constraintLeft_toRightOf="@id/dateLeft"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/strikeLine"
        android:layout_width="80dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textSize="15sp"
        android:background="@drawable/strikeline"


        app:layout_constraintLeft_toRightOf="@id/dateLeft"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />





    <TextView
        android:id="@+id/daysgone"
        android:layout_width="30dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/dateRight"
        android:text="5"
        app:layout_constraintRight_toLeftOf="@id/dateGoneright"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/daysLeft"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="364"
        android:background="@color/black"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/dateGoneright"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/Gone_per"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="%Gone"
        android:textStyle="bold"

        app:layout_constraintLeft_toRightOf="@id/Goneperc"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Left_per"
        android:layout_width="65dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="%Left"
        app:layout_constraintLeft_toRightOf="@id/daysLeftright"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/Today_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/Left_per"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dateLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"

        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dateRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       app:layout_constraintGuide_percent="0.2"

        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dateGoneright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"

        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/daysLeftright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Goneperc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"

        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Leftperc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1"

        />








</androidx.constraintlayout.widget.ConstraintLayout>